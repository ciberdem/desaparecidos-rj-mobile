# Configuration file responsible for organizing libraries needed to run tests with ruby/rspec/capybara

# Source page for loading gems
source 'https://rubygems.org'

# Call 'byebug' anywhere in the code to stop execution and get a debugger console
gem 'byebug', platform: :mri

# Testing tools
gem 'rspec', '~> 3.5.0'
gem 'capybara', '~> 2.7.1'
gem 'selenium-webdriver', '~> 3.0.0'

# Open debugging page
gem 'launchy', '~> 2.4.3'

# Stubbing requests
gem 'webmock', '~> 2.1.0'